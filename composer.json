{
    "name": "mihaikelemen/superset-php-client",
    "description": "PHP client library for Apache Superset API",
    "type": "library",
    "license": "MIT",
    "keywords": ["superset", "apache-superset", "api-client", "dashboard", "analytics", "php"],
    "homepage": "https://github.com/mihaikelemen/superset-php-client",
    "require": {
        "php": "^8.4",
        "ext-curl": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.10",
        "monolog/monolog": "^3.9",
        "symfony/serializer-pack": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.87"
    },
    "autoload": {
        "psr-4": {
            "Superset\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Superset\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Mihai KELEMEN",
            "email": "mihai@webmanage.ro"
        }
    ],
    "support": {
        "issues": "https://github.com/mihaikelemen/superset-php-client/issues",
        "source": "https://github.com/mihaikelemen/superset-php-client",
        "docs": "https://github.com/mihaikelemen/superset-php-client/blob/main/README.md"
    },
    "readme": "README.md",
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "prefer-stable": true
    },
    "scripts": {
        "test": "vendor/bin/phpunit --testsuite=\"Unit Tests\" --no-coverage",
        "test:unit": "vendor/bin/phpunit --group=unit --no-coverage",
        "test:integration": "vendor/bin/phpunit --group=integration --no-coverage",
        "test:all": "vendor/bin/phpunit --testsuite=\"All Tests\" --no-coverage",
        "test:coverage": "vendor/bin/phpunit --testsuite=\"Unit Tests\"",
        "test:coverage-all": "vendor/bin/phpunit --testsuite=\"All Tests\"",
        "cs-fix": "vendor/bin/php-cs-fixer fix src tests --config=.php-cs-fixer.dist.php",
        "cs-check": "vendor/bin/php-cs-fixer fix src tests --config=.php-cs-fixer.dist.php --dry-run --diff",
        "phpstan": "vendor/bin/phpstan analyse src",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@test:all"
        ]
    }
}
